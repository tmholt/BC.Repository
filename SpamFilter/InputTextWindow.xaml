<Window x:Class="SpamFilter.InputTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Text" Height="170" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
	<Grid>
		<Label Name="lblDesc" Content="Label" Margin="0" Padding="12" VerticalAlignment="Top" Height="50" Background="#eee"/>
		<TextBox Name="txtInput" VerticalAlignment="Top" Height="24" Margin="12, 60, 12, 0"/>
		<Button Name="btnOk" Content="OK" VerticalAlignment="Top" Margin="-90,95,0,0" HorizontalAlignment="Center" Padding="12,6" Width="80" Click="btnOk_Click" IsDefault="True"/>
		<Button Name="btnCancel" Content="Cancel" VerticalAlignment="Top" Margin="90,95,0,0" HorizontalAlignment="Center" Padding="12,6" Width="80" Click="btnCancel_Click" IsCancel="True"/>

	</Grid>
</Window>
